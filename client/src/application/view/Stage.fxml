            <Label fx:id="topBorderTitle" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="30.0" style="-fx-text-fill: #efefef;" text="Untitled">
               <padding>
                  <Insets left="20.0" right="20.0" />
               </padding>
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" nodeOrientation="RIGHT_TO_LEFT" prefHeight="30.0" HBox.hgrow="ALWAYS" spacing="10">
               <children>
                  	<FontAwesomeIconView glyphName="TIMES_CIRCLE" styleClass="topBarIcons" onMouseClicked="#closeStage" size="16px" fx:id="closeStageBtn" />
                  	<FontAwesomeIconView glyphName="MINUS_CIRCLE" styleClass="topBarIcons" onMouseClicked="#minimizeStage" size="16px" fx:id="minimizeStageBtn" />
               </children>
               <padding>
                  <Insets bottom="7.0" left="10.0" right="10.0" top="7.0" />
